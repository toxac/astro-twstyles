---
import {Image} from 'astro:assets'
import logo from '../assets/images/basicLogo.svg'
import {mainNavLinks} from '../shared/contants'
---

<div class="navbar bg-base-100 px-8 sm:px-16 shadow-md ">
    <div class="navbar-start">
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /></svg>
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                {mainNavLinks.map((link) => (
                    <li>
                        <a 
                            href={link.href}
                            class="font-monserrat leading-normal text-lg text-slate-gray"
                        >
                        {link.label}
                        </a>
                    </li>
                ))}
            </ul>
        </div>
        <a href="/">
            <Image src={logo} alt="Propelr logo" />
        </a>
    </div>
    <div class="navbar-center hidden lg:flex">
        <ul class="flex-1 flex justify-center items-center gap-16 max-lg:hidden">
            {mainNavLinks.map((link) => (
                <li>
                    <a 
                        href={link.href}
                        class="font-monserrat leading-normal text-lg text-slate-gray"
                    >
                    {link.label}
                    </a>
                </li>
            ))}
        </ul>
    </div>
    <div class="navbar-end">
        <a class="text-coral-red">Login</a>
    </div>
</div>
  

  